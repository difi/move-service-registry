<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,suspend=n,address=10.0.2.2,port=8000 -classpath %classpath org.springframework.boot.devtools.RemoteSpringApplication http://10.0.2.2:8080/ --spring--profiles.active=dev</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.attach>true</jpda.attach>
                <jdpa.listen>false</jdpa.listen>
                
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath org.springframework.boot.devtools.RemoteSpringApplication http://10.0.2.2:9099/ --spring.profiles.active=dev</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
